[module/notification]
type = custom/script
click-left = kill -s USR1 $(pidof deadd-notification-center)
exec = echo "    "
label-background = ${colors.black_dark}

[module/launcher]
type = custom/script
click-left = ~/.config/rofi/bins/appsmenu
exec = echo "      "
label-background = ${colors.black_dark}

