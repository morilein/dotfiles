[module/launcher]
type = custom/script
click-left = rofi -combi-modi window,drun -show combi -modi combi
exec = echo ""
label-foreground = ${colors.yellow_dark}

[module/notes]
type = custom/script
exec = echo ""
click-left = rofi-notes
label-foreground = ${colors.blue_dark}

[module/shot]
type = custom/script
exec = echo ""
click-left = flameshot gui &
label-foreground = ${colors.magenta_dark}

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true

format = <label-state> <label-mode>

label-focused  = "ﱣ"
label-occupied = "ﱣ"
label-urgent   = "ﱣ"
label-empty    = "ﱤ"

label-focused-foreground  = ${colors.yellow_dark}
label-occupied-foreground = ${colors.white_bright}
label-urgent-foreground   = ${colors.red_dark}
label-empty-foreground    = ${colors.white_dark}

label-focused-padding  = 1
label-occupied-padding = 1
label-urgent-padding   = 1
label-empty-padding    = 1

[module/bspbars]
type = internal/bspwm
pin-workspaces = true
enable-click = true

label-focused  = "    "
label-occupied = "    "
label-urgent   = "    "
label-empty    = "    "

label-focused-overline  = ${colors.yellow_dark}
label-occupied-overline = ${colors.white_dark}
label-urgent-overline   = ${colors.red_dark}
label-empty-overline    = ${colors.black_dark}

[module/date]
type = internal/date
label = "%date% %time%"
time = "%H:%M"
date = "%d. %b,"
time-alt = "%H:%M:%S"
date-alt = "%A - %d. %B,"

[module/pulsebar]
type = internal/pulseaudio
use-ui-max = true

format-muted = <bar-volume>
format-muted-background = ${colors.red_dark}

format-volume = <bar-volume>
format-volume-background = ${colors.white_dark}

bar-volume-width = 5
bar-volume-empty     = ""
bar-volume-fill      = "  "
bar-volume-indicator = "  "
bar-volume-indicator-background = ${colors.white_dark}

[module/pulseaudio]
type = internal/pulseaudio
