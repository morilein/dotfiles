; ---------- modules --------------
[module/notification]
type = custom/script
click-left = kill -s USR1 $(pidof deadd-notification-center)
exec = echo "    "
label-background = ${melon.blue_dark}

[module/launcher]
type = custom/script
click-left = ~/.config/rofi/bins/appsmenu
exec = echo "      "
label-background = ${melon.cyan}

[module/darkmode]
type = custom/script
exec = echo "    "
click-left = ~/.local/bin/toggle_nightday.sh
label-foreground = ${melon.white}
label-background = ${melon.blue_light}

[module/shot]
type = custom/script
exec = echo "      "
click-left = flameshot gui &
label-background = ${melon.cyan}

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true

format = <label-state> <label-mode>

label-focused  = %name%
label-occupied  = %name%
label-urgent  = %name%
label-empty  = %name%
; label-focused  = ""
; label-occupied = "利"
; label-urgent   = ""
; label-empty    = "吏"

label-focused-background  = ${melon.blue_light}
label-occupied-background = ${melon.blue_dark}
label-urgent-background   = ${colors.red_dark}
label-empty-background    = ${melon.bg_dark}

; label-focused-foreground  = ${melon.white}
; label-occupied-foreground = ${melon.blue_light}
; label-urgent-foreground   = ${colors.red_dark}
; label-empty-foreground    = ${melon.blue_dark}

label-focused-padding  = 4
label-occupied-padding = 4
label-urgent-padding   = 4
label-empty-padding    = 4

[module/date]
type = internal/date

label = "   %date% %time%   "
; format-background = ${melon.bg_dark}

time = "%H:%M"
date = "%A, %d. %B"

time-alt = "%H:%M:%S"
date-alt = "%A - %d. %B,"

[module/pulseaudio]
