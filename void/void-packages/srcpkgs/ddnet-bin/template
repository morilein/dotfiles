# Template file for 'ddnet-bin'
pkgname=ddnet-bin
version=16
revision=5
nostrip=yes
wrksrc=DDNet-${version}.${revision}-linux_x86_64
depends="freetype opusfile curl glew wavpack ffmpeg libnotify miniupnpc sqlite mariadb-client" # vulkan-icd-loader"
short_desc="DDraceNetwork, a free cooperative platformer game"
maintainer="Moritz Klein <moritz.klein@pm.me>"
license=('custom:BSD' 'CCPL:by-nc-sa')
homepage="https://ddnet.org"
distfiles="${homepage}/downloads/DDNet-${version}.${revision}-linux_x86_64.tar.xz"

# https://ddnet.org/downloads/sha256sums.txt
checksum="e832a4456157d0e9a7286d07eb3d2991ab72585cc9d26f8c495316918ad33d0a"

do_install() {
    vmkdir /usr/bin
    vcopy DDNet /usr/bin
    vcopy DDNet-Server /usr/bin

    vmkdir /usr/share/ddnet/
    vcopy data /usr/share/ddnet/data
}
