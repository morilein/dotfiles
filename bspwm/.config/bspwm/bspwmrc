#! /bin/sh

# colors
xrdb $HOME/.Xresources
source $HOME/.cache/wal/colors.sh

# keybinds
sxhkd &

# start utils
flameshot &
dunst &
nitrogen --restore &

wmname LG3D # for java

padding=10
# padding_bar=$((20+0+$padding))

bspc config window_gap            10
bspc config border_width          3
bspc config single_monocle        true
bspc config border_radius         12
bspc config top_padding           $padding
bspc config bottom_padding        $padding
bspc config right_padding         $padding
bspc config left_padding          $padding

bspc config split_ratio           0.5
bspc config click_to_focus        true
bspc config focus_follows_pointer false
bspc config borderless_monocle    true

bspc config focused_border_color  $color3
bspc config normal_border_color   $background
bspc config active_border_color   $color0
bspc config presel_feedback_color $color2

if [ $HOSTNAME == "olo" ]; then
    # bspc monitor DP-2 -d q w e r t
    bspc monitor DP-2 -d q w e r t
    bspc monitor DP-4 -d 1 2 3 4 5
    $HOME/.config/polybar/launch.sh leftL leftM leftR rightM

    # hideIt.sh --name '^polybar-right_DP-4$' -H -d top --peek 10 &
    # hideIt.sh --name '^polybar-left_DP-2$'  -H -d top --peek 10 &
else
    bspc monitor -d q w e r t z u i o p
    $HOME/.config/polybar/launch.sh laptop
fi

bspc rule -a qutebrowser           desktop=^1
bspc rule -a code-oss              desktop=^5  follow=off
bspc rule -a "Gimp-2.10"           desktop=^4  follow=off
bspc rule -a DDNet                 desktop=^10 follow=on state=fullscreen
bspc rule -a discord               desktop=^7  follow=off
bspc rule -a ts3client_linux_amd64 desktop=^7
bspc rule -a Zathura               state=tiled
bspc rule -a zoom                  state=tiled
bspc rule -a Pinentry              state=floating
bspc rule -a Spotify               desktop=^8
bspc rule -a ':cv2 -*'             state=tiled
bspc rule -a 'Zoom Meeting'        state=tiled
# bspc rule -a TelegramDesktop  desktop=^9 state=pseudo_tiled

bspc config external_rules_command "$HOME/.config/bspwm/external_rules" # Spotify

# vim: set ft=sh :
