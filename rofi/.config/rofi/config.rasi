configuration {
	display-run:    " ";
	display-drun:   "  ";
	display-window: "  ";
	drun-display-format: "{icon} {name}";
	font: "JetBrainsMono Nerd Font Medium 13";
	/* font: "SF Pro Text 13"; */
	modi: "window,run,drun,ssh,file-browser";
	show-icons: true;
	icon-theme: "Tela";
	dpi: 138;
}

* {
	background-color: @bg;
	foreground-color: @fg;

	border: 0;
	margin: 0;
	padding: 0;
	spacing: 0;
}

element {
	padding: 12;
	/* orientation: vertical; */
	text-color: @bg-alt;
}

element selected {
	text-color: @fg;
}

entry {
	background-color: @bg-alt2;
	padding: 12;
	text-color: @fg;
}

inputbar {
	children: [prompt, entry];
}

listview {
	background-color: @bg;
	columns: 3;
	lines: 8;
	padding: 0.5em;
	spacing: 0.1em;
	border: 0.1em;
	border-color: @bg-alt2;
}

message {
	border: 0.5em;
	border-color: @bg-alt2;
}

textbox {
	background-color: @bg-alt2;
	color: @bg-alt;
}


mainbox {
	background-color: @bg;
	children: [inputbar, message, listview];
}

prompt {
	background-color: @bg-alt2;
	enabled: true;
	/* font: "FontAwesome 12"; */
	padding: 12 0 0 12;
	text-color: @bg-alt;
}

window {
	transparency: "real";
}

@import "~/.cache/wal/colors-rofi.rasi"
