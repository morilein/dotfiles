#
# bspwm hotkeys
#

#reload bspwm
super + ctrl + b
	~/.config/bspwm/bspwmrc

#reload sxhkdrc
super + ctrl + s
	pkill -USR1 -x sxhkd

#quit
super + ctrl + q
	pkill panel; \
	bspc quit

#
# bspwm hotkeys
#
# focus monitor DIR
super + x
	bspc monitor -f next

# send node to desktop on current monitor index
super + {_,shift} + {q,w,e,r,t,y,u,i,o,p}
	bspc {desktop -f,node -d} '^{1-9,10}'
super + {_,shift} + {1-5}
	bspc {desktop -f,node -d} '^{6-9,10}'

# hide current node, or restore a queried hidden node
super + a
	bspc node $(bspc query -N -d -n .hidden | head -n 1) -g hidden

# rotate, balance
super + {_,shift} + g
	bspc node $(bspc query -N -n -n .!leaf || echo @/) {-R 90,-B}

# close and kill
super + {_,shift + }c
	bspc node -{c,k}

# swap the current node and the biggest node
super + b
	bspc node -s biggest.local

#
# state/flags
#

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

super + {s,shift + f}
	bspc node -t '~{floating,fullscreen}'

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus/move/resize/presel the node in the given direction
super + {_,shift,alt,ctrl} + {h,j,k,l}
	{focus,move,resize,presel}.sh {west,south,north,east}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# focus the node for the given path jump
super + {n,m,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node/destop in the current desktop
super + {_, shift} + Tab
    bspc node -f {next, prev}.local

alt + Tab
    bspc desktop -f last

#--- desktop ---#
# adjust window gap
super + {KP_Add, KP_Subtract}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

#
# preselect
#
# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + semicolon
	bspc node -n 'last.!automatic.local'

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + f
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + f
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
#

#--- applications/.. ---#

super + Return
	st
	# urxvtc
	# alacritty

super + ctrl + Return
	urxvtd -q -f -o

#rofi
super + d
	rofi -show drun
	#rofi -combi-modi window,drun -show combi

super + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + ctrl + p
	rofi-pass

#info
super + z
    notifyStats.sh

#scrot
super + 0
	region
super + 9
	scrot

#--- volume&mpc ---#
XF86AudioPlay
	mpc toggle

XF86AudioNext
	mpc next

XF86AudioPrev
	mpc prev

XF86MonBrightnessDown
	brightnessControl.sh down

XF86MonBrightnessUp
	brightnessControl.sh up

XF86AudioRaiseVolume
	volumeControl.sh up

XF86AudioLowerVolume
	volumeControl.sh down

XF86AudioMute
	volumeControl.sh mute
